  <audio id="themeAudio">
    <source src="public/The_Office_Theme_Song.mp3" type="audio/mpeg">
    Tu navegador no soporta el elemento de audio.
  </audio>
  <div id="attempts">Intentos: 0</div>
  <div class="grid" id="grid"></div>
  <div id="message"></div>
  <button id="resetButton">Reiniciar Juego</button>

  <script>
    const grid = document.getElementById('grid');
    const message = document.getElementById('message');
    const attemptsDisplay = document.getElementById('attempts');
    const resetButton = document.getElementById('resetButton');
    const playMusicButton = document.getElementById('playMusicButton');
    const themeAudio = document.getElementById('themeAudio');
    let attempts = 0;
    let gameOver = false;
    let cakeIndex = 0;

    const characters = [
      'ğŸ§‘â€ğŸ’¼', 'ğŸ‘©â€ğŸ’¼', 'ğŸ‘¨â€ğŸ’¼', 'ğŸ•µï¸',
      'ğŸ‘¨â€ğŸ’»', 'ğŸ’¼', 'ğŸ“', 'ğŸ“ ',
      'ğŸ“Š', 'ğŸ“…', 'ğŸ“±', 'ğŸ“',
      'ğŸ“', 'ğŸ“‹', 'ğŸ“‡', 'ğŸ“Œ'
    ];

    function initializeGame() {
      grid.innerHTML = '';
      message.innerHTML = '';
      attempts = 0;
      attemptsDisplay.textContent = `Intentos: ${attempts}`;
      gameOver = false;
      cakeIndex = Math.floor(Math.random() * 16);

      for (let i = 0; i < 16; i++) {
        const tile = document.createElement('div');
        tile.classList.add('tile');
        tile.dataset.index = i;
        tile.style.pointerEvents = 'auto';
        // Imagen de Andrea por defecto
        const img = document.createElement('img');
        img.src = 'public/andre_picture.png';
        img.alt = 'Andrea';
        tile.appendChild(img);
        tile.onclick = function() {
          if (gameOver || tile.classList.contains('cake') || tile.classList.contains('wrong')) return;
          attempts++;
          attemptsDisplay.textContent = `Intentos: ${attempts}`;
          if (parseInt(tile.dataset.index) === cakeIndex) {
            tile.innerHTML = 'ğŸ‚';
            tile.classList.add('cake');
            message.innerHTML = '<strong>Joyeux anniversaire Andrea!</strong><br>ğŸ‰ El equipo UProfit te celebra como a la mejor jefa en Scranton (y el mundo).';
            gameOver = true;
            lanzarConfetti();
            document.querySelectorAll('.tile').forEach(t => t.style.pointerEvents = 'none');
          } else {
            tile.innerHTML = characters[i];
            tile.classList.add('wrong');
            tile.style.pointerEvents = 'none';
            setTimeout(() => tile.classList.remove('wrong'), 400);
          }
        };
        grid.appendChild(tile);
      }
    }

    function lanzarConfetti() {
      const duration = 3 * 1000;
      const animationEnd = Date.now() + duration;
      const defaults = { startVelocity: 30, spread: 360, ticks: 60, zIndex: 0 };
      function randomInRange(min, max) {
        return Math.random() * (max - min) + min;
      }
      const interval = setInterval(function() {
        const timeLeft = animationEnd - Date.now();
        if (timeLeft <= 0) {
          return clearInterval(interval);
        }
        const particleCount = 50 * (timeLeft / duration);
        confetti({
          ...defaults,
          particleCount,
          origin: { x: randomInRange(0.1, 0.3), y: Math.random() - 0.2 }
        });
        confetti({
          ...defaults,
          particleCount,
          origin: { x: randomInRange(0.7, 0.9), y: Math.random() - 0.2 }
        });
      }, 250);
    }

    resetButton.onclick = function() {
      initializeGame();
    };

    playMusicButton.onclick = function() {
      if (themeAudio.paused) {
        themeAudio.play();
      } else {
        themeAudio.pause();
      }
    };

    themeAudio.onplay = function() {
      playMusicButton.textContent = 'â¸ï¸';
    };

    themeAudio.onpause = function() {
      playMusicButton.textContent = 'â–¶ï¸';
    };

    // Inicializar el juego al cargar
    initializeGame();
  </script>
</body>
